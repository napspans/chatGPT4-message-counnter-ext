{
  "manifest_version": 3,
  "name": "ChatGPT-4 Message Counter",
  "version": "1.0",
  "description": "Counts the number of messages sent to ChatGPT-4.",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "images/icon128.png"
    }
  },
  "host_permissions": [
    "https://chat.openai.com/*"
  ]
}
